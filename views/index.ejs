<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Message Board</title>
    <link rel="stylesheet" href="./styles.css">
  </head>
  <body>
    <h2>Message Board</h2>
    <% messages.map((msg, index) => { %>
    <div class="msg-block">
      <div class="msg-content">
        <div class="msg-title"><%= msg.text %></div>
        <div class="msg-user"><%= msg.user %></div>
        <div class="msg-date"><%= msg.added %></div>
      </div>
      <a href="/message/details/<%= index%>"><button>Open details</button></a>
    </div>
    <% }) %>
    <a href="/new">
      <button type="button">Create new message</button>
    </a>
  </body>
</html>
